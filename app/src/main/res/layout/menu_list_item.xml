<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="1dip"
        android:textColor="#343434"
        android:textSize="10dip" />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/title"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/editMenuButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/duration"
        android:layout_below="@+id/duration"
        android:background="@drawable/edit"
        android:scaleType="fitCenter" />


    <ImageButton
        android:id="@+id/deleteMenuButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/duration"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/editMenuButton"
        android:background="@drawable/deletered"
        android:scaleType="fitCenter" />


    <ImageButton
        android:id="@+id/addToPlateButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/duration"
        android:layout_below="@+id/duration"
        android:background="@drawable/plate"
        android:scaleType="fitCenter" />

</RelativeLayout>