<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fragmentGroupListWithItemIcons"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/groupListWithItemIconsMenuTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/groupListWithItemIconsMenuTypeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/border_black"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/groupListWithItemIcons_groupList_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"></FrameLayout>


            <FrameLayout
                android:id="@+id/groupListWithItemIcons_item_icons_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"></FrameLayout>

        </LinearLayout>

</LinearLayout>
