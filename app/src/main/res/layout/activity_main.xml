<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/start_lock_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_black"
        android:text="Hello!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mainActivity_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_alignLeft="@+id/start_lock_button"
        android:layout_below="@+id/start_lock_button"
        android:text="Please press this button to enter the app." />

</RelativeLayout>



