<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviewMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.ReviewMainActivity">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/reviewsViewDurationSpinner"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:entries="@array/order_view_duration" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/reviewsViewDurationSpinner"></com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/lowRatedItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reviewsViewDurationSpinner"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/barChart"
        android:text="Lowest rated items today:"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lowRatedItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/lowRatedItemsLabel"
        android:text="Plain Dosa (Bad; 25, Average: 34)\nBaby Corn Machurian(Bad; 25, Average: 34)\nMysore Bonda (Bad; 25, Average: 34)"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/topRatedItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/lowRatedItems"
        android:layout_marginTop="20dp"
        android:text="Top rated items today:"
        android:textColor="@color/green"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/topRatedItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/topRatedItemsLabel"
        android:text="Plain Dosa (Bad; 25, Average: 34)\nBaby Corn Machurian(Bad; 25, Average: 34)\nMysore Bonda (Bad; 25, Average: 34)"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/recentCommentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/topRatedItems"
        android:layout_marginTop="20dp"
        android:text="Recent Comments:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/recentComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/recentCommentsLabel"
        android:text="Pakoda - This was awesome.. will come back. \nBonda - didnt like it.. worst ever"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/overallPerformanceButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/recentComments"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_black"
        android:onClick="showSettingsPage"
        android:text="Overall Performance"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cusotmerCommentsButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/lowRatedItemsLabel"
        android:layout_below="@+id/overallPerformanceButton"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_black"
        android:onClick="showSettingsPage"
        android:text="Customer Comments"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
